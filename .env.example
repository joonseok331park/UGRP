# Example environment configuration file
# Copy this file to .env and update with your actual settings

# Project root path (adjust based on your system)
PROJECT_ROOT=/mnt/c/UGRP_summer/UGRP

# Data paths
DATA_PATH=${PROJECT_ROOT}/data
RAW_DATA_PATH=${PROJECT_ROOT}/data/raw
PROCESSED_DATA_PATH=${PROJECT_ROOT}/data/processed

# Dataset specific paths
CAN_MIRGU_PATH=${PROJECT_ROOT}/data/raw/can_mirgu
ROAD_PATH=${PROJECT_ROOT}/data/raw/ROAD
TEST_DATA_PATH=${PROJECT_ROOT}/data/raw/can-train-and-test

# Model and artifact paths
MODEL_PATH=${PROJECT_ROOT}/artifacts/models
CHECKPOINT_PATH=${PROJECT_ROOT}/checkpoints
VOCAB_PATH=${PROJECT_ROOT}/artifacts/models/vocab.json

# Training configuration (based on specification.md)
# Teacher pre-training
PRETRAIN_BATCH_SIZE=32
PRETRAIN_LEARNING_RATE=1e-3
PRETRAIN_EPOCHS=3
PRETRAIN_MASK_PROB=0.45

# Teacher fine-tuning
FINETUNE_BATCH_SIZE=128
FINETUNE_BODY_LR=2e-6
FINETUNE_HEAD_LR=5e-5
FINETUNE_EPOCHS=3

# Student distillation
DISTILL_BATCH_SIZE=1024
DISTILL_LEARNING_RATE=1e-5
DISTILL_EPOCHS=8
DISTILL_ALPHA=0.5
DISTILL_TEMPERATURE=2

# Logging and monitoring
WANDB_PROJECT=CAN-IDS-UGRP
WANDB_API_KEY=your_wandb_api_key_here
LOG_LEVEL=INFO

# Device configuration
DEVICE=cuda  # cuda or cpu
NUM_WORKERS=4